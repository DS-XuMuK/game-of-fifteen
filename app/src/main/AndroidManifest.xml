<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nikolaykolchin.gameoffifteen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gof"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gof_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameOfFifteen">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ClassicActivity"
            android:label="Классический режим"
            android:screenOrientation="portrait"/>
        <activity android:name=".UserActivity"
            android:label="Пользовательский режим"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryLevelActivity"
            android:label="Выбор уровня"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryActivity"
            android:label="Сюжетный режим"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:label="Ориентация"
            />
    </application>

</manifest>